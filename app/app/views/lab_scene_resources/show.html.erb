<%- model_class = LabSceneResource -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @lab_scene_resource.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @lab_scene_resource.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:play_type) %>:</strong></dt>
  <dd><%= @lab_scene_resource.play_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:play_idle) %>:</strong></dt>
  <dd><%= @lab_scene_resource.play_idle %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lab_scene_resources_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_scene_resource_path(@lab_scene_resource), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_scene_resource_path(@lab_scene_resource),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
