<%= form_for @lab_supplier, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name,"公司名:", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tel,"电话:", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tel, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :addr,"地址:", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :addr, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contacts,"联系人:", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contacts, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "确定", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lab_suppliers_path, :class => 'btn' %>
  </div>
<% end %>
