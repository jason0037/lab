<%- model_class = LabTeachDesign -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:file) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:course_type) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lab_teach_designs.each do |lab_teach_design| %>
      <tr>
        <td><%= link_to lab_teach_design.id, lab_teach_design_path(lab_teach_design) %></td>
        <td><%= lab_teach_design.name %></td>
        <td><%= lab_teach_design.file %></td>
        <td><%= lab_teach_design.author %></td>
        <td><%= lab_teach_design.course_type %></td>
        <td><%= lab_teach_design.status %></td>
        <td><%=l lab_teach_design.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lab_teach_design_path(lab_teach_design), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lab_teach_design_path(lab_teach_design),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lab_teach_design_path,
            :class => 'btn btn-primary' %>
