<%- model_class = LabCourseware -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:course_id) %></th>
      <th><%= model_class.human_attribute_name(:productor_id) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:play_time) %></th>
      <th><%= model_class.human_attribute_name(:file_size) %></th>
      <th><%= model_class.human_attribute_name(:product_time) %></th>
      <th><%= model_class.human_attribute_name(:download_url) %></th>
      <th><%= model_class.human_attribute_name(:download_times) %></th>
      <th><%= model_class.human_attribute_name(:publish_time) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lab_coursewares.each do |lab_courseware| %>
      <tr>
        <td><%= link_to lab_courseware.id, lab_courseware_path(lab_courseware) %></td>
        <td><%= lab_courseware.name %></td>
        <td><%= lab_courseware.course_id %></td>
        <td><%= lab_courseware.productor_id %></td>
        <td><%= lab_courseware.type %></td>
        <td><%= lab_courseware.play_time %></td>
        <td><%= lab_courseware.file_size %></td>
        <td><%= lab_courseware.product_time %></td>
        <td><%= lab_courseware.download_url %></td>
        <td><%= lab_courseware.download_times %></td>
        <td><%= lab_courseware.publish_time %></td>
        <td><%=l lab_courseware.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lab_courseware_path(lab_courseware), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lab_courseware_path(lab_courseware),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lab_courseware_path,
            :class => 'btn btn-primary' %>
