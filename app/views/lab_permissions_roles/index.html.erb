<%- model_class = LabPermissionsRole -%>
<div class="panel">
  <header>
    <span><i class="icon-asterisk"></i></span>
    <span><%=t '.title', :default => model_class.model_name.human.pluralize %></span>
    <span class="new_button">
        <%= link_to t('.new', :default => t("helpers.links.new")),
                    new_lab_permissions_role_path,
                    :class => 'btn btn-primary' %>
     </span>
  </header>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:role_id) %></th>
      <th><%= model_class.human_attribute_name(:permission_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lab_permissions_roles.each do |lab_permissions_role| %>
      <tr>
        <td><%= link_to lab_permissions_role.id, lab_permissions_role_path(lab_permissions_role) %></td>
        <td><%= lab_permissions_role.role_id %></td>
        <td><%= lab_permissions_role.permission_id %></td>
        <td><%=l lab_permissions_role.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lab_permissions_role_path(lab_permissions_role), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lab_permissions_role_path(lab_permissions_role),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagination">
  <%= will_paginate @lab_permissions_roles, :container => false %>
</div>