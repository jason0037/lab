<%= form_for @lab_eval_project, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' do%>
      评测对象名称：
    <%end%>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :version, :class => 'control-label' do%>
      版本：
    <%end%>
    <div class="controls">
      <%= f.text_field :version, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :categery_id, :class => 'control-label' do%>
      评测对象类型：
    <%end%>
    <div class="controls">
      <%=f.select :categery_id, options_from_collection_for_select(Option.where(:key=>"eval_object_type"),'value','name',''),:include_blank=>"请选择" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :course_type, :class => 'control-label' do%>
      课程类型：
    <%end%>
    <div class="controls">
      <%= f.number_field :course_type, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :scene_id,"教学场景：", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :scene_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :supplier_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :supplier_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "确定", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lab_eval_projects_path, :class => 'btn' %>
  </div>
<% end %>
