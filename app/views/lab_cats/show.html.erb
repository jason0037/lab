<%- model_class = LabCat -%>
<div class="metro adjust-lab">
  <nav class="breadcrumbs" style="margin-top: 20px">
    <ul>
      <li><a href="#"><i class="icon-home"></i></a></li>
      <li><a href="#">学科类别</a></li>
      <li><a href="#"><%= @lab_cat.parent_id %></a></li>
    </ul>
  </nav>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:parent_id) %>:</strong></dt>
  <dd><%= @lab_cat.parent_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cat_name) %>:</strong></dt>
  <dd><%= @lab_cat.cat_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disabled) %>:</strong></dt>
  <dd><%= @lab_cat.disabled %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lab_cats_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_cat_path(@lab_cat), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_cat_path(@lab_cat),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
