<%- model_class = LabQuestionItem -%>
<div class="panel">
  <header>
    <span><i class="icon-circle-arrow-up arrow_op"></i></span>
    <span><%=t '.title', :default => model_class.model_name.human.pluralize %></span>
    <span class="new_button">
        <i class="icon-pencil"></i>
        <%= link_to t('.new', :default => t("helpers.links.new")),
                    new_lab_question_item_path %>
     </span>
  </header>
</div>
<div class="panel">
  <br>
  <form method="post" action="<%=@action%>" class=="form-search">
    <input value='<%=@key%>' name="key" class = 'text_field search-query'/>
    <input type="submit" value="查询" class ='btn'/>
  </form>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:desc) %></th>
      <th><%= model_class.human_attribute_name(:question_id) %></th>
      <th><%= model_class.human_attribute_name(:item_index) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lab_question_items.each do |lab_question_item| %>
      <tr>
        <td><%= link_to lab_question_item.id, lab_question_item_path(lab_question_item) %></td>
        <td><%= lab_question_item.desc %></td>
        <td><%= lab_question_item.question_id %></td>
        <td><%= lab_question_item.item_index %></td>
        <td><%=l lab_question_item.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lab_question_item_path(lab_question_item), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lab_question_item_path(lab_question_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagination">
  <%= will_paginate @lab_question_items, :container => false %>
</div>