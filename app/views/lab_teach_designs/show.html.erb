<%- model_class = LabTeachDesign -%>
<div class="page-header">
  <h1><%="教学设计：《#{@lab_teach_design.title}》" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>作者:</strong></dt>
  <dd><%= @lab_teach_design.lab_user.name %></dd>
  <dt><strong>学科类别:</strong></dt>
  <dd><%= @lab_teach_design.course_type %></dd>
  <dt><strong>状态:</strong></dt>
  <dd><%= @lab_teach_design.status %></dd>
  <dt><strong>附件:</strong></dt>
  <dd>&nbsp;<%= @lab_teach_design.file %></dd>
  <dt><strong>创建时间:</strong></dt>
  <dd><%= @lab_teach_design.created_at %></dd>
  <dt><strong>修改时间:</strong></dt>
  <dd><%= @lab_teach_design.updated_at %></dd>
  <dt><strong>简介:</strong></dt>
  <dd><%= @lab_teach_design.brief %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lab_teach_designs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_teach_design_path(@lab_teach_design), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_teach_design_path(@lab_teach_design),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
