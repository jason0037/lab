<%- model_class = LabDevice -%>
<div class="metro adjust-lab">
  <nav class="breadcrumbs" style="margin-top: 20px">
    <ul>
      <li><a href="#"><i class="icon-home"></i></a></li>
      <li><a href="#">设备</a></li>
      <li><a href="#"><%= @lab_device.name %></a></li>
    </ul>
  </nav>
</div>

<dl class="dl-horizontal">
  <dt><strong>名称</strong></dt>
  <dd>&nbsp;<%= @lab_device.name %></dd>
  <dt><strong>类型</strong></dt>
  <dd>&nbsp;<%= @lab_device.device_type %></dd>
  <dt><strong>品牌</strong></dt>
  <dd>&nbsp;<%= @lab_device.brand %></dd>
  <dt><strong>价值</strong></dt>
  <dd>&nbsp;<%= @lab_device.cost%></dd>
  <dt><strong>供应商</strong></dt>
  <dd>&nbsp;<%= @lab_device.supplier %></dd>
  <dt><strong>条码</strong></dt>
  <dd>&nbsp;<%= @lab_device.bn %></dd>
  <dt><strong>版本</strong></dt>
  <dd>&nbsp;<%= @lab_device.version %></dd>
  <dt><strong>状态</strong></dt>
  <dd>&nbsp;<%= Option.where(:key=>"device_status",:value=>@lab_device.status).first.name %></dd>
  <dt><strong>修改时间</strong></dt>
  <dd>&nbsp;<%=l @lab_device.updated_at %></dd>
  <dt><strong>创建时间</strong></dt>
  <dd>&nbsp;<%=l @lab_device.created_at %></dd>
  <dt><strong>照片</strong></dt>
  <dd>&nbsp;<%=image_tag @lab_device.photo,:alt=>@lab_device.name,:style=>"width:100px"%></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lab_devices_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_device_path(@lab_device), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_device_path(@lab_device),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
