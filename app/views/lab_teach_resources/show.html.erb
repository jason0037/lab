<%- model_class = LabTeachResource -%>
<div class="page-header">
  <h1><%="教学资源：《#{@lab_teach_resource.title}》" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>作者:</strong></dt>
  <dd><%= @lab_teach_resource.lab_user.name %></dd>
  <dt><strong>学科类别:</strong></dt>
  <dd><%= @lab_teach_resource.course_type %></dd>
  <dt><strong>状态:</strong></dt>
  <dd><%= @lab_teach_resource.status %></dd>
  <dt><strong>附件:</strong></dt>
  <dd>&nbsp;<%= @lab_teach_resource.file %></dd>
  <dt><strong>创建时间:</strong></dt>
  <dd><%= @lab_teach_resource.created_at %></dd>
  <dt><strong>修改时间:</strong></dt>
  <dd><%= @lab_teach_resource.updated_at %></dd>
  <dt><strong>简介:</strong></dt>
  <dd><%= @lab_teach_resource.brief %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lab_teach_resources_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_teach_resource_path(@lab_teach_resource), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_teach_resource_path(@lab_teach_resource),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
