<%- model_class = LabTeachResource -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:course_type) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lab_teach_resources.each do |lab_teach_resource| %>
      <tr>
        <td><%= link_to lab_teach_resource.id, lab_teach_resource_path(lab_teach_resource) %></td>
        <td><%= lab_teach_resource.name %></td>
        <td><%= lab_teach_resource.author %></td>
        <td><%= lab_teach_resource.course_type %></td>
        <td><%= lab_teach_resource.status %></td>
        <td><%=l lab_teach_resource.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lab_teach_resource_path(lab_teach_resource), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lab_teach_resource_path(lab_teach_resource),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lab_teach_resource_path,
            :class => 'btn btn-primary' %>
