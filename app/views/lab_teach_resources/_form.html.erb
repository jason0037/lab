<%= form_for @lab_teach_resource, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :title,"标题" ,:class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :file,"文件", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :file, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :course_type,"学科类型", :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :course_type, :class => 'number_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :brief, "简介", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :brief, :class => 'text_field' %>
      </div>
    </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lab_teach_resources_path, :class => 'btn' %>
  </div>
<% end %>
