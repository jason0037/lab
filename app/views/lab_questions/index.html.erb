<%- model_class = LabQuestion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_lab_question_path,
              :class => 'btn btn-primary' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:question) %></th>
      <th><%= model_class.human_attribute_name(:report_id) %></th>
      <th><%= model_class.human_attribute_name(:report_index) %></th>
      <th><%= model_class.human_attribute_name(:answer_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lab_questions.each do |lab_question| %>
      <tr>
        <td><%= link_to lab_question.id, lab_question_path(lab_question) %></td>
        <td><%= lab_question.question %></td>
        <td><%= lab_question.report_id %></td>
        <td><%= lab_question.report_index %></td>
        <td><%= lab_question.answer_id %></td>
        <td><%=l lab_question.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lab_question_path(lab_question), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lab_question_path(lab_question),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagination">
  <%= will_paginate @lab_questions, :container => false %>
</div>