<%- model_class = LabQuestion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>问题内容:</strong></dt>
  <dd>&nbsp;<%= @lab_question.desc %></dd>
  <dt><strong>问题类别:</strong></dt>
  <dd>&nbsp;<%= @lab_question.question_category %></dd>
  <dt><strong>问题类型:</strong></dt>
  <dd>&nbsp;<%= @lab_question.version %></dd>
  <dt><strong>最高权重:</strong></dt>
  <dd>&nbsp;<%= @lab_question.weight %></dd>
  <dt><strong>最高分值:</strong></dt>
  <dd>&nbsp;<%= @lab_question.score %></dd>
  <dt><strong>回答选项:</strong></dt>
  <dd>&nbsp;<%= @lab_question.options %></dd>
  <dt><strong>创建时间:</strong></dt>
  <dd>&nbsp;<%= @lab_question.created_at %></dd>
  <dt><strong>修改时间:</strong></dt>
  <dd>&nbsp;<%= @lab_question.updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lab_questions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_question_path(@lab_question), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_question_path(@lab_question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
