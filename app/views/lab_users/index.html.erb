<%- model_class = LabUser -%>
<div class="page-header">
  <h1>用户列表</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:mobile) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:account) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:role_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lab_users.each do |lab_user| %>
      <tr>
        <td><%= link_to lab_user.id, lab_user_path(lab_user) %></td>
        <td><%= lab_user.name %></td>
        <td><%= lab_user.mobile %></td>
        <td><%= lab_user.email %></td>
        <td><%= lab_user.account %></td>
        <td><%= lab_user.status %></td>
        <td><%= lab_user.role_id %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lab_user_path(lab_user), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lab_user_path(lab_user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination">
  <%= will_paginate @lab_users, :container => false %>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lab_user_path,
            :class => 'btn btn-primary' %>
