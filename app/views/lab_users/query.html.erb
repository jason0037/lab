<%- model_class = LabUser -%>

<div class="panel">
  <header>
    <span><i class="icon-asterisk"></i></span>
    <span>学生列表</span>
  </header>
</div>
<div class="panel">
  <br>
  <%=form_for :s,:url=>query_lab_users_path,:method=>:get,:html=>{:class=>"form-search"} do |f|%>
  <%= f.text_field :name, :class => 'text_field search-query',:placeholder=>"姓名",:value=>@query_text%>
  <%= f.submit "查询", :class => 'btn' %>
  <%end%>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>编号</th>
      <th>昵称</th>
      <th>手机</th>
      <th>Email</th>
      <th>账号</th>
      <th>状态</th>
    </tr>
  </thead>
  <tbody>
    <% @lab_users.each do |lab_user| %>
      <tr>
        <td><%= link_to lab_user.id, lab_user_path(lab_user) %></td>
        <td><%= lab_user.name %></td>
        <td><%= lab_user.mobile %></td>
        <td><%= lab_user.email %></td>
        <td><%= lab_user.account %></td>
        <td><%= lab_user.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination">
  <%= will_paginate @lab_users, :container => false %>
</div>