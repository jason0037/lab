<%- model_class = LabSeat -%>
<div class="panel">
  <header>
    <span><i class="icon-circle-arrow-up arrow_op"></i></span>
    <span>试验课堂座位</span>
     <span class="new_button">

     </span>
  </header>
</div>
<div class="panel">
  <br>
  <form method="post" action="<%=@action%>" class=="form-search">
    <input value='<%=@key%>' name="key" placeholder="请输入名称或标题搜索"  class = 'text_field search-query'/>
    <input type="submit" value="查询" class ='btn'/>
  </form>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:course_id) %></th>
      <th><%= model_class.human_attribute_name(:seat_index) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lab_seats.each do |lab_seat| %>
      <tr>
        <td><%= link_to lab_seat.id, lab_seat_path(lab_seat) %></td>
        <td><%= lab_seat.course_id %></td>
        <td><%= lab_seat.seat_index %></td>
        <td><%= lab_seat.user_id %></td>
        <td><%=l lab_seat.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lab_seat_path(lab_seat), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lab_seat_path(lab_seat),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lab_seat_path,
            :class => 'btn btn-primary' %>
