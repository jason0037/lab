<%- model_class = LabUser -%>
<div class="metro adjust-lab">
  <nav class="breadcrumbs" style="margin-top: 20px">
    <ul>
      <li><a href="#"><i class="icon-home"></i></a></li>
      <li><%=link_to "实验室管理", monitors_path %></li>
      <li><%=link_to "脑波监测", mind_wave_monitors_path %></li>
    </ul>
  </nav>
</div>

<ul class="muti_charts" style="margin-left:3px">
  <li>
    <div id="chart-00">
      <%= text_field_tag('data_source_0', "/monitors/dashboard_data?equipment_code=002001&point_id=000000&size=small&chart=AngularGauge", :type=>'hidden')%>
      <div class="small_chart" chart-type="/FusionCharts/AngularGauge.swf"
           data-source="/monitors/dashboard_data?equipment_code=002001"
           id="chart-container-0">
      </div>
    </div>
  </li>
  <li>
    <div id="chart-multiaxisline">
      <%= text_field_tag('data_source_multiaxisline' , "/monitors/mind_wave_data?equipment_code=002001&point_id=000000&size=small&chart=MultiAxisLine", :type=>'hidden')%>
      <div class="small_chart" chart-type="/FusionCharts/MultiAxisLine.swf"
           data-source="/monitors/mind_wave_data?equipment_code=002001"
           id="chart-container-multiaxisline">
      </div>
    </div>
  </li>
  <li>
    <div id="chart-01" style="display:none">
      <%#= text_field_tag('data_source_1', "/monitors/mind_wave_data?equipment_code=002001&point_id=000000&size=small", :type=>'hidden')%>
      <div class="small_chart" chart-type="/FusionCharts/RealTimeLineDY.swf"
           data-source="/monitors/mind_wave_data?equipment_code=002001"
           id="chart-container-1">
      </div>
    </div>
  </li>
  <li>
    <div id="chart-02"  style="display:none">
      <%#= text_field_tag('data_source_2', "/monitors/mind_wave_data?equipment_code=002001&point_id=000001&size=small", :type=>'hidden')%>
      <div class="small_chart" chart-type="/FusionCharts/RealTimeLineDY.swf"
           data-source="/monitors/mind_wave_data?equipment_code=002001"
           id="chart-container-2">
      </div>
    </div>
  </li>
</ul>
<script type="text/javascript">
    $(".small_chart").click(function(e){
        var chart_type = $(this).attr("chart-type");
        var data_source = $(this).attr("data-source");
        window.parent.show_fancybox(data_source,chart_type);
    })
</script>