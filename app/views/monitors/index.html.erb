<div class="metro adjust-lab">
  <nav class="breadcrumbs" style="margin-top: 20px">
    <ul>
      <li><a href="#"><i class="icon-home"></i></a></li>
      <li><%=link_to "实验室管理", monitors_path %></li>
    </ul>
  </nav>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>课程编号</th>
    <th>名称</th>
    <th>学科分类</th>
    <th>评测对象</th>
    <th>教师</th>
    <th>开始时间</th>
    <th>结束时间</th>
    <th>状态</th>
    <th>评测编号</th>
    <th>教学场景</th>
    <th>需要教师？</th>
    <th>图表分析</th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @lab_course.each do |lab_course| %>
      <tr>
        <td><%= link_to lab_course.id, lab_course_path(lab_course) %></td>
        <td><%= lab_course.name %></td>
        <td><%= lab_course.category_id %></td>
        <td><%= lab_course.course_type %></td>
        <td><%= lab_course.teacher_id %></td>
        <td><%=l lab_course.start_time %></td>
        <td><%=l lab_course.end_time %></td>
        <td><%= lab_course.status %></td>
        <td><%= lab_course.project_id %></td>
        <td><%= lab_course.scene_id %></td>
        <td><%= lab_course.is_teach %></td>
      </tr>
  <% end %>
  </tbody>
</table>
