           data-source="/monitors/mind_wave_data?equipment_code=002001"
           id="chart-container-2">
      </div>
      </div>
    </div>
  </li>
  <li>
    <div id="chart-03">
      <%= text_field_tag('data_source_3', "/monitors/network_data?equipment_code=003001", :type=>'hidden')%>
