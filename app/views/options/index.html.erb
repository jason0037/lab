<%- model_class = Option -%>
<div class="panel">
  <header>
    <span><i class="icon-circle-arrow-up arrow_op"></i></span>
    <span>基础信息</span>
     <span class="new_button">
        <i class="icon-pencil"></i>
        <%= link_to t('.new', :default => t("helpers.links.new")),
                    new_option_path%>
     </span>
  </header>
</div>
<div class="panel">
  <br>
  <form method="post" action="<%=@action%>" class=="form-search">
    <input value='<%=@search%>' name="search" class = 'text_field search-query'/>
    <input type="submit" value="查询" class ='btn'/>
  </form>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>编号</th>
      <%if @user.role_id==6%>
       <th>数据类型</th>
      <%end%>
      <th>显示位置</th>
      <th>显示名称</th>
      <th>值</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td><%= link_to option.id, option_path(option) %></td>
        <%if @user.role_id==6%>
            <td><%= option.key %></td>
        <%end%>
        <td><%= option.index %></td>
        <td><%= option.name %></td>
        <td><%= option.value %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_option_path(option), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      option_path(option),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination">
  <%= will_paginate @options, :container => false %>
</div>

