<%- model_class = LabSupplier -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>名称:</strong></dt>
  <dd><%= @lab_supplier.name %></dd>
  <dt><strong>电话:</strong></dt>
  <dd><%= @lab_supplier.tel %></dd>
  <dt><strong>地址:</strong></dt>
  <dd><%= @lab_supplier.addr %></dd>
  <dt><strong>联系人:</strong></dt>
  <dd><%= @lab_supplier.contacts %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lab_suppliers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_supplier_path(@lab_supplier), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_supplier_path(@lab_supplier),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
