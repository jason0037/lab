<%- model_class = LabScene -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>名称:</strong></dt>
  <dd><%= @lab_scene.name %></dd>
  <dt><strong>播放次数:</strong></dt>
  <dd><%= @lab_scene.limit %></dd>
  <dt><strong>描述:</strong></dt>
  <dd><%= @lab_scene.desc %></dd>
  <dt><strong>多媒体资源ID:</strong></dt>
  <dd><%= @lab_scene.secens_resource_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lab_scenes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_scene_path(@lab_scene), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_scene_path(@lab_scene),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
