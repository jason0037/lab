<%= form_for @lab_questions_score, :html => { :class => 'form-horizontal' } do |f| %>

    <%@question_categories.each do |category|%>
        <div><%="#{category.value}.#{category.name}"%></div>
        <div><%=category.desc%></div>
        <% @lab_questions.where(:question_category=>category.value).each do |question| %>
            <div><%="#{question.id}.#{question.desc}"%></div>
            <div>
              <span
                  <%= f.label "重要性", :class => 'control-label' %>
                  <%= number_field_tag "question#{question.id}[importance]",nil,in: 1..3, :class => 'number_field'  %>
               </span>
              <span>
                  <%= f.label "得分",:class => 'control-label'  %>
                  <%= number_field_tag "question#{question.id}[score]",nil ,in: 0..7, :class => 'number_field' %>
              </span>
            </div>
        <% end %>
    <%end%>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lab_questions_path, :class => 'btn' %>
  </div>
<% end %>
