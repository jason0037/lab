<%- model_class = LabReport -%>
  <div class="panel">
    <header>
      <span><i class="icon-circle-arrow-up arrow_op"></i></span>
      <span>报告生成</span>
    <span class="new_button">
        <i class="icon-pencil"></i>
     </span>
    </header>
  </div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>报告类型</th>
      <th>生成时间</th>
      <th><%=t '.actions', :default => t("helpers.actions") %> </th>
    </tr>
    </thead>
    <tbody>
    <tr>  <td><a href='/lab_reports/<%=@id%>/export_excel'>excel数据</a></td><td></td><td></td>
    </tr>
    <tr>
      <td><a href='/lab_reports/<%=@id%>/export?title=behaviour'>行为体态分析报告</a></td><td></td><td></td>
    </tr>
    <tr><td><a href='/lab_reports/<%=@id%>/export?title=mindwave'>脑波分析报告</a></td><td></td><td></td>
    </tr>
    <tr>  <td><a href='/lab_reports/<%=@id%>/export?title=questions'>问卷评测报告</a></td><td></td><td></td>
    </tr>
    <tr>  <td><a href='/lab_reports/<%=@id%>/export?title=comprehensive'>综合报告</a></td><td></td><td></td>
    </tr>

    </tbody>
  </table>
<dl class="dl-horizontal" style="display:none">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%#= @lab_report.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%#= @lab_report.desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parent_report_id) %>:</strong></dt>
  <dd><%#= @lab_report.parent_report_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:child_report_index) %>:</strong></dt>
  <dd><%#= @lab_report.child_report_index %></dd>
</dl>

<div class="form-actions" style="display:none">
  <%#= link_to t('.back', :default => t("helpers.links.back")),
              lab_reports_path, :class => 'btn'  %>
  <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_report_path(@lab_report), :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_report_path(@lab_report),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
