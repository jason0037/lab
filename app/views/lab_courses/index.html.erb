<%- model_class = LabCourse -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_lab_course_path,
              :class => 'btn btn-primary' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:category_id) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:teacher_id) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%= model_class.human_attribute_name(:end_time) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:report_id) %></th>
      <th><%= model_class.human_attribute_name(:progress) %></th>
      <th><%= model_class.human_attribute_name(:publish_time) %></th>
      <th><%= model_class.human_attribute_name(:apply_time) %></th>
      <th><%= model_class.human_attribute_name(:approve_time) %></th>
      <th><%= model_class.human_attribute_name(:style) %></th>
      <th><%= model_class.human_attribute_name(:course_property) %></th>
      <th><%= model_class.human_attribute_name(:is_teach) %></th>
      <th><%= model_class.human_attribute_name(:before) %></th>
      <th><%= model_class.human_attribute_name(:desc) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lab_courses.each do |lab_course| %>
      <tr>
        <td><%= link_to lab_course.id, lab_course_path(lab_course) %></td>
        <td><%= lab_course.name %></td>
        <td><%= lab_course.category_id %></td>
        <td><%= lab_course.type %></td>
        <td><%= lab_course.teacher_id %></td>
        <td><%= lab_course.start_time %></td>
        <td><%= lab_course.end_time %></td>
        <td><%= lab_course.status %></td>
        <td><%= lab_course.report_id %></td>
        <td><%= lab_course.progress %></td>
        <td><%= lab_course.publish_time %></td>
        <td><%= lab_course.apply_time %></td>
        <td><%= lab_course.approve_time %></td>
        <td><%= lab_course.style %></td>
        <td><%= lab_course.course_property %></td>
        <td><%= lab_course.is_teach %></td>
        <td><%= lab_course.before %></td>
        <td><%= lab_course.desc %></td>
        <td><%= lab_course.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lab_course_path(lab_course), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lab_course_path(lab_course),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagination">
  <%= will_paginate @lab_courses, :container => false %>
</div>