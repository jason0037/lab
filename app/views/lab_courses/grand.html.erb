<%- model_class = LabCourse -%>
<div class="page-header">
  <h1>学生成绩--<%=@lab_course_name%></h1>
</div>
<%= form_for @lab_course, :html => {:class => 'form-horizontal' } do |f|%>
    <div style="display:none">
     <%= f.text_field :name, :class => 'text_field'%>
    </div>
    <%i = 1%>
    <%while i <= 4  do%>
        <div class="control-group" style="clear:both">
          <%= f.label :grand, "学生#{i}：", :class => 'control-label' %>
          <div class="controls">
            <%#= f.text_field  "grand[student#{i}]", :class => 'text_field'%>
            <%= text_field_tag "grand[student#{i}]"%>
          </div>
        </div>
        <%i +=1%>
    <% end%>
    <div>
     <span class="help-inline error">
       <%@lab_course.errors.each do |error| %>
         <%= @lab_course.errors[error] %> &nbsp;&nbsp;
       <%end%>
     </span>
    </div>
    <div class="form-actions">
      <%= f.submit "确定", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  'javascript:history.go(-1)', :class => 'btn' %>
    </div>
<% end %>
