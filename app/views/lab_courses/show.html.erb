<%- model_class = LabCourse -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @lab_course.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @lab_course.category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @lab_course.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:teacher_id) %>:</strong></dt>
  <dd><%= @lab_course.teacher_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_time) %>:</strong></dt>
  <dd><%= @lab_course.start_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_time) %>:</strong></dt>
  <dd><%= @lab_course.end_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @lab_course.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:report_id) %>:</strong></dt>
  <dd><%= @lab_course.report_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:progress) %>:</strong></dt>
  <dd><%= @lab_course.progress %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publish_time) %>:</strong></dt>
  <dd><%= @lab_course.publish_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apply_time) %>:</strong></dt>
  <dd><%= @lab_course.apply_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:approve_time) %>:</strong></dt>
  <dd><%= @lab_course.approve_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:style) %>:</strong></dt>
  <dd><%= @lab_course.style %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course_property) %>:</strong></dt>
  <dd><%= @lab_course.course_property %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_teach) %>:</strong></dt>
  <dd><%= @lab_course.is_teach %></dd>
  <dt><strong><%= model_class.human_attribute_name(:before) %>:</strong></dt>
  <dd><%= @lab_course.before %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @lab_course.desc %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lab_courses_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_course_path(@lab_course), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_course_path(@lab_course),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
