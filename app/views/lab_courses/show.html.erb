<%- model_class = LabCourse -%>
<div class="metro adjust-lab">
  <nav class="breadcrumbs" style="margin-top: 20px">
    <ul>
      <li><a href="#"><i class="icon-home"></i></a></li>
      <li><a href="#">实验课堂</a></li>
      <li><a href="#"><%= @lab_course.name %></a></li>
    </ul>
  </nav>
</div>

<dl class="dl-horizontal">
  <dt><strong>学科类别:</strong></dt>
  <dd><%= @lab_course.category_id %></dd>
  <dt><strong>课程类别:</strong></dt>
  <dd><%= @lab_course.course_type %></dd>
  <dt><strong>教师:</strong></dt>
  <dd><%= @lab_course.teacher_id %></dd>
  <dt><strong>开始时间:</strong></dt>
  <dd><%=l @lab_course.start_time %></dd>
  <dt><strong>结束时间:</strong></dt>
  <dd><%=l @lab_course.end_time %></dd>
  <dt><strong>状态:</strong></dt>
  <dd><%= @lab_course.status %></dd>
  <dt><strong>评测对象:</strong></dt>
  <dd><%= @lab_course.project_id %></dd>
  <dt><strong>过程:</strong></dt>
  <dd><%= @lab_course.progress %></dd>
  <dt><strong>发布时间:</strong></dt>
  <dd><%=l( @lab_course.publish_time,:format=>:long) if @lab_course.publish_time %></dd>
  <dt><strong>申请时间:</strong></dt>
  <dd><%= l (@lab_course.apply_time, :format => :long) if @lab_course.apply_time%> %></dd>
  <dt><strong>批准时间:</strong></dt>
  <dd><%=l (@lab_course.approve_time, :format => :long) if @lab_course.approve_time%></dd>
  <dt><strong>场景:</strong></dt>
  <dd><%= @lab_course.scene_id %></dd>
  <dt><strong>课程属性:</strong></dt>
  <dd><%= @lab_course.course_property %></dd>
  <dt><strong>是否需要教师:</strong></dt>
  <dd><%= @lab_course.is_teach %></dd>
  <dt><strong>在此之前:</strong></dt>
  <dd><%= @lab_course.before %></dd>
  <dt><strong>简介:</strong></dt>
  <dd><%= @lab_course.desc %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lab_courses_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_course_path(@lab_course), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_course_path(@lab_course),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
