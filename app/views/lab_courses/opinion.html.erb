<%- model_class = LabCourse -%>
<div class="page-header">
  <h1>意见和建议--<%=@lab_course.name%></h1>
</div>
<%= form_for @lab_course, :html => {:class => 'form-horizontal' } do |f|%>
      <div class="control-group" style="clear:both">
        <%= f.label :opinion, "意见和建议：", :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :opinion, :class => 'text_field',:style=>"width:500px" %>
        </div>
      </div>
    <div>
     <span class="help-inline error">
       <%@lab_course.errors.each do |error| %>
         <%= @lab_course.errors[error] %> &nbsp;&nbsp;
       <%end%>
     </span>
    </div>
    <div class="form-actions">
      <%= f.submit "确定", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  'javascript:history.go(-1)', :class => 'btn' %>
    </div>
<% end %>
